@using Microsoft.CodeAnalysis.CSharp.Syntax
@inherits LayoutComponentBase

<MudThemeProvider  @bind-IsDarkMode="_useDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar>
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Dark" Edge="Edge.Start" OnClick="DrawerToggle" />
		Neil Senior Nature Walks
		<MudIconButton Icon="@(_useDarkMode ? Icons.Material.Filled.Brightness7 : Icons.Material.Filled.Brightness4)" Color="Color.Dark" Edge="Edge.End" OnClick="ToggleDarkMode" />

	</MudAppBar>
	<MudDrawer @bind-Open="_drawerOpen">
		<MyNavMenu/>
	</MudDrawer>
	<MudMainContent>
		@Body
	</MudMainContent>
</MudLayout>

@code {

	// Drawer
	private bool _drawerOpen = true;

	private void DrawerToggle()
	{
		_drawerOpen = !_drawerOpen;
	}

	// Dark Mode
	private bool _useDarkMode = false;

	private void ToggleDarkMode()
	{
		_useDarkMode = !_useDarkMode;
	}

	

	

	
}