<MudNavMenu>
	<AuthorizeView Roles="Admin">
		<Authorized>
			<MudNavLink Href="/admin/dashboard"
						Icon="@Icons.Material.Filled.AdminPanelSettings"
						IconColor="Color.Success"
						Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">
				Admin
			</MudNavLink>
		</Authorized>
	</AuthorizeView>
	<MudNavLink Href="/"
				Icon="@Icons.Material.Filled.Home"
				IconColor="Color.Success"
				Match="NavLinkMatch.All" ActiveClass="navlink-match">Home</MudNavLink>
	<MudNavLink Href="/tours"
				Icon="@Icons.Material.Filled.Map"
				IconColor="Color.Success"
				Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">Upcoming Tours</MudNavLink>
	<MudNavLink Href="/privatetours"
				Icon="@Icons.Material.Filled.Create"
				IconColor="Color.Success"
				Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">Private Tours</MudNavLink>
	<MudNavLink Href="/about"
				Icon="@Icons.Material.Filled.Person"
				IconColor="Color.Success"
				Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">About Me</MudNavLink>
	@* <MudNavLink Href="/giftvoucher" 
				Icon="@Icons.Material.Filled.CardGiftcard"
				IconColor="Color.Success"
				Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">Gift Vouchers</MudNavLink> *@
	<MudNavLink Href="/contact"
				Icon="@Icons.Material.Filled.Email"
				IconColor="Color.Success"
				Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">Contact Us</MudNavLink>
	<MudNavLink Href="/gallery"
				Icon="@Icons.Material.Filled.PhotoLibrary"
				IconColor="Color.Success"
				Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">Image Gallery</MudNavLink>
	<MudNavLink Href="/news"
				Icon="@Icons.Material.Filled.Newspaper"
				IconColor="Color.Success"
				Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">News</MudNavLink>
	<AuthorizeView>
		<Authorized>
			<MudNavGroup Title="Account"
						 Icon="@Icons.Material.Filled.AccountCircle"
						 IconColor="Color.Success">
				<MudNavLink Href="/account/manage"
							Icon="@Icons.Material.Filled.Settings"
							IconColor="Color.Success"
							Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">Manage</MudNavLink>
				<MudNavLink Href="/mytours"
							Icon="@Icons.Material.Filled.Event"
							IconColor="Color.Success"
							Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">My Tours</MudNavLink>
				<MudNavLink Href="/account/logout"
							Icon="@Icons.Material.Filled.Logout"
							IconColor="Color.Success"
							Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">Logout</MudNavLink>
			</MudNavGroup>
		</Authorized>
		<NotAuthorized>
			<MudNavLink Href="/account/login"
						Icon="@Icons.Material.Filled.Login"
						IconColor="Color.Success"
						Match="NavLinkMatch.Prefix" ActiveClass="navlink-match">Login/Register</MudNavLink>
		</NotAuthorized>
	</AuthorizeView>
</MudNavMenu>

