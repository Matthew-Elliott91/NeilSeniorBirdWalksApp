@page "/tours/location"

<PageTitle>Tour Locations</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
	<MudText Typo="Typo.h3" Class="mb-4">Choose a Tour Location</MudText>
    
	<MudGrid>
		<MudItem xs="12" sm="6">
			<MudCard Elevation="3" Class="mb-4">
				<MudCardMedia Image="/images/north-norfolk.jpg" Height="200" />
				<MudCardContent>
					<MudText Typo="Typo.h5">North Norfolk</MudText>
					<MudText Typo="Typo.body2">Explore the diverse habitats and rich birdlife of North Norfolk.</MudText>
				</MudCardContent>
				<MudCardActions>
					<MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/tours/location/northnorfolk">View Tours</MudButton>
				</MudCardActions>
			</MudCard>
		</MudItem>
        
		<MudItem xs="12" sm="6">
			<MudCard Elevation="3" Class="mb-4">
				<MudCardMedia Image="/images/west-norfolk.jpg" Height="200" />
				<MudCardContent>
					<MudText Typo="Typo.h5">West Norfolk</MudText>
					<MudText Typo="Typo.body2">Discover the unique birdwatching opportunities in West Norfolk.</MudText>
				</MudCardContent>
				<MudCardActions>
					<MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/tours/location/westnorfolk">View Tours</MudButton>
				</MudCardActions>
			</MudCard>
		</MudItem>
	</MudGrid>
</MudContainer>

