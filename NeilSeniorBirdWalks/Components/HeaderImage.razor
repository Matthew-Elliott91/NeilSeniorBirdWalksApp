@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="header-banner mb-2 d-flex px-0" Style="@($"overflow: hidden; background-image: url('{BackgroundImageUrl}');")">
	<MudPaper Elevation="3" Class="header-content-box pa-4">
		<MudGrid Class="header-content align-center text-center">
			<MudItem xs="12" md="6">
				<!-- First column - text and buttons -->
				<MudGrid>
					<MudItem xs="12">
						<MudText Typo="Typo.h4" Color="Color.Primary" Class="mud-text-wrap">@Title</MudText>
					</MudItem>
					<MudItem xs="12">
						<MudText Typo="Typo.h6" Class="mud-text-wrap">@Subtitle</MudText>
					</MudItem>
					@if (ShowButtons)
					{
						<MudItem xs="12" sm="4">
							<MudButton @onclick="ViewTours" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Class="mt-3" Style="color: var(--mud-palette-white);">View Tours</MudButton>
						</MudItem>
						<MudItem xs="12" sm="4">
							<MudButton @onclick="AboutMe" Variant="Variant.Filled" Color="Color.Secondary" FullWidth="true" Class="mt-3">About Me</MudButton>
						</MudItem>
						<MudItem xs="12" sm="4">
							<MudButton @onclick="Calendar" Variant="Variant.Filled" Color="Color.Tertiary" FullWidth="true" Class="mt-3">Calendar</MudButton>
						</MudItem>
					}
				</MudGrid>
			</MudItem>
			<MudItem xs="12" md="6" Class="d-flex justify-center align-center">
				
				<MudImage Src="@($"{ImageUrl}")" ObjectFit="ObjectFit.Cover" Fluid="true" Class="circle-image" Style="max-width: 450px; max-height: 450px;" />
			</MudItem>
		</MudGrid>
	</MudPaper>
</MudContainer>

@code {
	[Parameter]
	public string Title { get; set; } = "Explore, Discover, Soar – Birdwatching Adventures with Neil Senior!";

	[Parameter]
	public string Subtitle { get; set; } = "Discover amazing content and features";
	[Parameter]
	public string ImageUrl { get; set; } = "/Images/Neil.jpg";
	[Parameter]
	public string BackgroundImageUrl { get; set; } = "/Images/HeaderImg.jpg";
	[Parameter]
	public bool ShowButtons { get; set; } = true;

	private void ViewTours()
	{
		NavigationManager.NavigateTo("/tours");
	}

	private void AboutMe()
	{
		NavigationManager.NavigateTo("/about");
	}

	private void Calendar()
	{
		NavigationManager.NavigateTo("/calendar");
	}
}




